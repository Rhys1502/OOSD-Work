        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <Grid>
        <Label Content="You have entered the details correctly" HorizontalAlignment="Left" Margin="209,109,0,0" VerticalAlignment="Top" Height="132" Width="395" RenderTransformOrigin="0.5,0.5">
